
@{
    ViewBag.Title = "Bank";
}

<div ng-controller="Bankctrl">


    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <input type="hidden" ng-model="bankid">
                <div class="col-md-5">
                    <label class="control-label text-right rqrd" for="">Bank Name</label>

                </div>
                <div class="col-md-7">
                    <input class="form-control input-group rqrd" type="text" ng-model="bankname" placeholder="Enter Bank name">


                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5">
                    <label class="control-label text-right rqrd" for="">Bank Code</label>

                </div>
                <div class="col-md-7">
                    <input class="form-control" type="text" ng-model="bankcode" placeholder="Enter Bank Code">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-5"> </div>
                <div class="col-md-7">
                    <input type="button" value="Submit" ng-click="insertBank();" />
                </div>

            </div>
        </div>
    </div>


    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center">Bank Id</th>
                <th>Bank Name</th>
                <th>Bank Code</th>
                <th>Action</th>

            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="e in BankBind">
                <td class="center">{{e.BankId}}</td>
                <td>{{e.BankName}}</td>
                <td class="hidden-480">{{e.BankCode}}</td>
                <td>
                    <input type="button" value="Edit" ng-click="editBank(e);" />
                    <input type="button" value="Delete" ng-click="deleteBank(e.BankId);" />
                </td>

            </tr>

        </tbody>
    </table>

</div>

