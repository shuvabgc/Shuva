
@{
    ViewBag.Title = "Branch";
}

<div ng-controller="BranchCtrl">


    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <input type="hidden" ng-model="BranchId">
                <div class="col-md-5">
                    <label class="control-label text-right rqrd" for="">Branch Name</label>

                </div>
                <div class="col-md-7">
                    <input class="form-control input-group rqrd" type="text" ng-model="branchname" placeholder="Enter Brnach name">


                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5">
                    <label class="control-label text-right rqrd" for="">Swift Code</label>

                </div>
                <div class="col-md-7">
                    <input class="form-control" type="text" ng-model="swiftcode" placeholder="Enter Swift Code">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5">
                    <label class="control-label text-right rqrd" for="">Bank Name</label>
                </div>
                <div class="col-md-7">
                    <select class="form-control" ng-model="bankname" ng-options="d.BankId as d.BankName for d in BankBind">
                        <option value="">-- Bank Catagory-- </option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-5"> </div>
                <div class="col-md-7">
                    <input type="button" value="Submit" ng-click="insertBranch();" />
                </div>

            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="center">Employee Id</th>
                <th>Branch Name</th>
                <th>Swift Code</th>
                <th> Bank Name </th>
                <th>Action</th>

            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="e in BranchBind">
                <td class="center">{{e.BranchId}}</td>
                <td>{{e.BranchName}}</td>
                <td class="hidden-480">{{e.SwiftCode}}</td>
                <td>{{e.BankName}}</td>
                <td>
                    <input type="button" value="Edit" ng-click="editBranch(e);" />
                    <input type="button" value="Delete" ng-click="deleteBranch(e.BranchId);" />
                </td>

            </tr>

        </tbody>
    </table>

</div>
